@page
@model UMLRazor.Pages.MenuItems.DeleteMenuItemModel
@{
    ViewData["Title"] = "Delete Menu Item";
}
<h1>Delete Menu Item</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.MenuItem.No" class="control-label"></label>
                <input asp-for="@Model.MenuItem.No" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MenuItem.Name" class="control-label"></label>
                <input asp-for="@Model.MenuItem.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MenuItem.Price" class="control-label"></label>
                <input asp-for="@Model.MenuItem.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MenuItem.Description" class="control-label"></label>
                <input asp-for="@Model.MenuItem.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MenuItem.TheMenuType" class="control-label"></label>
                <input asp-for="@Model.MenuItem.TheMenuType" class="form-control" />
            </div>
            <div class="formgroup">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-page="ShowMenuItems">Back to List</a>
    </div>
</div>